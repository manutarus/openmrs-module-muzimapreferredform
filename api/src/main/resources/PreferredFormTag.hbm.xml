<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs.module.muzimaform">

    <class name="PreferredFormTag" table="${project.parent.artifactId}_preferred_form_tag">
        <id name="id" type="int" column="id" unsaved-value="0">
            <generator class="native"/>
        </id>
        <discriminator column="id" insert="false"/>

        <property name="tag" type="java.lang.String" column="uuid" length="255" unique="true"/>

        <many-to-one name="creator" class="org.openmrs.User" not-null="true" column="creator"/>

        <property name="dateCreated" type="java.util.Date" column="date_created" not-null="true" length="19"/>

        <property name="uuid" type="java.lang.String" column="uuid" length="38" unique="true"/>
    </class>

</hibernate-mapping>
